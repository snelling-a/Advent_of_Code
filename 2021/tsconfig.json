{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"removeComments": true,
		"declaration": true,
		"outDir": "./dist",
		"preserveConstEnums": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"lib": ["es5", "es6", "dom", "dom.iterable"]
	},
	"include": ["src"],
	"exclude": ["node_modules", "src/**/*.test.ts", "src/**/*.temp.ts"]
}

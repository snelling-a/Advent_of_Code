{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "prettier",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "ignorePatterns": [
        "node_modules",
        "*.temp.*",
        "*/**/*.temp.*",
        "*.log",
        "*/**/*.log",
        ".idea",
        ".vscode",
        ".env",
        "dist"
    ],
    "rules": {
        "curly": ["error", "multi-line", "consistent"],
        "indent": [
            "error",
            "tab",
            {
                "SwitchCase": 1,
                "CallExpression": {
                    "arguments": "first"
                },
                "FunctionDeclaration": {
                    "parameters": "first"
                },
                "FunctionExpression": {
                    "parameters": "first"
                },
                "flatTernaryExpressions": true,
                "offsetTernaryExpressions": true
            }
        ],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "padding-line-between-statements": [
            "error",
            { "blankLine": "always", "prev": "*", "next": "return" }
        ]
    }
}
